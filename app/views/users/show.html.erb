<div class="main">
  <div class="container">

    <img src="<%="/user_images/#{@user.image_name}"%>" >
    <h2><%= @user.name %></h2>
    <p><%= @user.email %></p>
    <% if @user.id==@current_user.id %>
      <%= link_to("編集","/users/#{@user.id}/edit") %>
    <% end %>

    <% @user.posts.each do |post| %>
      <div class="user_right">
      <%= link_to(post.content,"/posts#{post.id}") %>
      </div>
    <% end %>

  </div>
</div>
